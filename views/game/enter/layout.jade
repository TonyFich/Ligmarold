doctype html
html
	head
		title Ligmar - best game in the WORLD!!!!
		link(rel="icon" type="image/x-icon" href="../favicon.ico")
		link(href='../css/bootstrap.css' rel='stylesheet')
		link(href='../css/game/main.css' rel='stylesheet')
		link(href='../css/game/off-canvas.css' rel='stylesheet')
		link(href='../css/characters.css' rel='stylesheet')
		script(src='../js/jquery-2.1.4.js' type='text/javascript')
		script(src='../js/bootstrap.js' type='text/javascript')
		meta(name="viewport" content="width=device-width, initial-scale=1")

	body
		.st-container#st-container

			//Блок меню
			include menu
			.st-pusher
				.st-content

					//Шапка
					.row.center.main
						.topwrap
							.row.top-block
								.col-xs-3
								.col-xs-7.characters
									h3 
										block title
								.col-xs-2
									div#st-trigger-effects
										button(type="button" data-effect="st-effect-1").btn.btn-primary
											span.glyphicon.glyphicon-align-justify

					//Центральный блок
					block content

					//Футер
					include ../../footer
		script(src='../js/off-canvas.js' type='text/javascript')